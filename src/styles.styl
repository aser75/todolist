@import "~@angular/material/prebuilt-themes/indigo-pink.css";

body
   font-family: 'Rubik', sans-serif;
   color #5d5d5d
   background-color #f5f5f5

   .sup
      color #ea5181
      font-size 23px
      font-weight bold
      display none
      transition color 0.2s ease-out
      position absolute
      top 58%
      transform translateY(-50%)
      right 0
      z-index 99
      cursor pointer
      background-color white
      border 1px solid #5d5d5d
      border-radius 50%
      height 34px
      width 34px

      &:after
         content 'x'

   h2
      margin-top 0
      
   .header_title
      color #0287c9
